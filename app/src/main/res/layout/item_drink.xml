<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/MainD">

            <TextView
                android:id="@+id/textViewDrinkAlcohol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="@color/MainA"
                app:layout_constraintEnd_toEndOf="@+id/textViewDrinkIngredients"
                app:layout_constraintStart_toStartOf="@+id/textViewDrinkIngredients"
                app:layout_constraintTop_toBottomOf="@+id/textViewDrinkCategory" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Ingredients:"
                android:textColor="@color/MainB"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewDrinkIngredients"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Category:"
                android:textColor="@color/MainB"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewDrinkCategory"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textViewDrinkIngredients"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="TextView"
                android:textColor="@color/MainA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textViewDrinkAlcohol" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Alcohol:"
                android:textColor="@color/MainB"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewDrinkAlcohol"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textViewDrinkName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/MainC"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Drink Name"
                android:textColor="@color/MainE"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewDrinkCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="@color/MainA"
                app:layout_constraintEnd_toEndOf="@+id/textViewDrinkAlcohol"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textViewDrinkAlcohol"
                app:layout_constraintTop_toBottomOf="@+id/textViewDrinkName" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>